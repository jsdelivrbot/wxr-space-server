<body>

	<!-- Header -->
	<%- include('template/header'); -%>

	<main role="main">

		<!-- Page Header -->
		<div class="container">
			<h1 class="pl-4 mt-5 mb-3">My Workspaces</h1>
			<hr class="wxr-sm-divider">
		</div>


		<!--Workspace list-->
		<div class="container my-5">
			<% for (var workspace of workspaceList) { %>
			<div class="row">
				<div class="col-md-7">
					<img class="img-fluid w-100 rounded mb-3 mb-md-0" style="width:700px; height:300px;" src="/images/thumbnail/<%= workspace.thumbnail ? workspace.thumbnail : 'workspace-thumbnail-placeholder.jpg' %>" alt="Workspace thumbnail">
				</div>
				<div class="col-md-5">
					<h3><%= workspace.name %></h3>
					<h6><%= workspace.ownerName %></h6>
					<p><%= workspace.description %></p>
					<a class="btn btn-primary wxr-button wxr-bg-blue" href="/view/<%= workspace.id %>">View Project</a>
				</div>
			</div>
			<hr>
			<!-- /.row -->
			<% } %>

			<!-- Pagination -->
			<ul class="pagination justify-content-center">
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
						<span class="sr-only">Previous</span>
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">3</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
						<span class="sr-only">Next</span>
					</a>
				</li>
			</ul>

		</div>
		<!--Workspace end-->

	</main>

	<!-- Footer -->
	<%- include('template/footer'); -%>


	<!-- jQuery -->
	<script src="/libs/jquery/jquery.min.js"></script>
	<!-- autosize -->
	<script src="/libs/jquery/jquery.autosize.js"></script>
	<!-- Waypoints -->
	<script src="/libs/jquery/jquery.waypoints.min.js"></script>
	<!-- jQuery UI -->
	<script src="/libs/jquery/ui/effect.js"></script>
	<!-- Bootstrap -->
	<script src="/libs/bootstrap/bootstrap.min.js"></script>
	<!-- Socket.io -->
	<script src="/libs/socket.io/socket.io.js"></script>
	<!-- Webizing Device Configuration Manager -->
	<script src="/javascripts/webizingDeviceConfigurationManager.js"></script>

