	<!-- Facebook and Twitter integration -->
	<meta property="og:title" content=""/>
	<meta property="og:image" content=""/>
	<meta property="og:url" content=""/>
	<meta property="og:site_name" content=""/>
	<meta property="og:description" content=""/>
	<meta name="twitter:title" content="" />
	<meta name="twitter:image" content="" />
	<meta name="twitter:url" content="" />
	<meta name="twitter:card" content="" />

	<link rel="icon" href="https://getbootstrap.com/favicon.ico">

	<!-- Bootstrap core CSS -->
	<link href="/lib/bootstrap/bootstrap.min.css" rel="stylesheet">

	<!-- Font awesome CSS -->
	<link href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">

	<!-- Custom styles for this template -->
	<link href="/stylesheets/style.css" rel="stylesheet">
</head>

<body>


    <!-- Header -->
    <%- include('header'); -%>

	<main role="main">

		<!--Recent workspaces-->
		<% if (user) { %>
		<div class="container pt-3 my-5 text-center">
			<h1 class="my-3">Recent Worksapces</h1>
			<p>Here are your histories you did.</p>
		</div>

		<div class="container pb-5">
			<div class="d-flex flex-row flex-nowrap wxr-overflow-x-scroll">
				<% for (var workspace of recentWorkspace) { %>
                    <div class="card mr-5 bg-light">
                        <a class="wxr-plain-link" href="/view/<%= workspace.id %>">
                        <img class="card-img-top" src="/images/img_thumnail_placeholder.png" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"><%= workspace.p('name') %></h5>
                            <p class="card-text"><%= workspace.p('description') %></p>
                        </div>
                        </a>
                    </div>
				<% } %>
			</div>
		</div>
		<% } %>
		<!--Recent workspaces end-->


		<!--Search panel-->
		<div class="container-fluid wxr-search">
			<div class="row align-items-center h-100">
				<div class="col-12 text-center">
					<input type="search" value="" placeholder="type keyword(s) here" /> <br>
					<button type="submit" class="btn btn-primary wxr-button">Search</button>
				</div>
			</div>
		</div>
		<!--Search end-->


		<!--Workspace list-->
		<div class="container mb-5">

			<!-- Page Heading -->
			<div class="container pt-3 my-5 text-center">
				<h1 class="my-3">Workspaces</h1>
				<p>Take a look around what's going on!</p>
			</div>

			<% for (var workspace of workspaceList) { %>
			<div class="row">
				<div class="col-md-7">
					<a class="w-100" href="#">
						<img class="img-fluid w-100 rounded mb-3 mb-md-0" style="width:700px; height:300px;" src="/images/img_thumnail_placeholder.png" alt="Workspace thumbnail">
					</a>
				</div>
				<div class="col-md-5">
					<h3><%= workspace.p('name') %></h3>
					<h6><%= workspace.p('ownerId') %></h6>
					<p><%= workspace.p('description') %></p>
					<a class="btn btn-primary wxr-button wxr-bg-blue" href="/view/<%= workspace.id %>">View Project</a>
				</div>
			</div>
			<hr>
			<!-- /.row -->
			<% } %>

			<!-- Pagination -->
			<ul class="pagination justify-content-center">
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
						<span class="sr-only">Previous</span>
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">3</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
						<span class="sr-only">Next</span>
					</a>
				</li>
			</ul>

		</div>
		<!--Workspace end-->

	</main>

	<!-- Footer -->
    <%- include('footer'); -%>


	<!-- jQuery -->
	<script src="/lib/jquery/jquery.min.js"></script>
	<!-- autosize -->
	<script src="/lib/jquery/jquery.autosize.js"></script>
	<!-- Waypoints -->
	<script src="/lib/jquery/jquery.waypoints.min.js"></script>
	<!-- jQuery UI -->
	<script src="/lib/jquery/ui/effect.js"></script>
	<!-- Bootstrap -->
	<script src="/lib/bootstrap/bootstrap.min.js"></script>
	<!-- Socket.io -->
	<script src="/lib/socket.io/socket.io.js"></script>
	<!-- Webizing Device Configuration Manager -->
	<script src="/js/webizingDeviceConfigurationManager.js"></script>

	<script>
		$('.fliper-btn').click(function(){
			$('.flip').find('.card').toggleClass('flipped');
		});

		$('textarea').autosize({append:''});

		$('.modal').on('hidden.bs.modal', function () {
			$(this).find('input,textarea,select').val('').end();
		});

	</script>

</body>

</html>