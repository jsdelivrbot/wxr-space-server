  // W3.CSS Login Modal
  #loginModalWindow.w3-modal
    .w3-modal-content.w3-card-4.w3-animate-zoom(style='max-width:600px')
      .w3-center
        br
        span.w3-button.w3-xlarge.w3-transparent.w3-display-topright(onclick="close_login_modal()", title='Close Modal') ×
      form.w3-container(action='/user/login', method='post')
        .w3-section
          label
            b Username
          input.w3-input.w3-border.w3-margin-bottom(type='text', placeholder='Enter Username', name='username', required='')
          label
            b Password
          input.w3-input.w3-border(type='text', placeholder='Enter Password', name='password', required='')
          button.w3-button.w3-block.w3-green.w3-section.w3-padding(type='submit') Login
