extends layout

append meta
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')

append scripts
  script(src='/javascripts/main.js')
  script(src='/lib/socket.io/socket.io.js')
  script(src='/lib/jquery/jquery.min.js')

append styles
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway')
  link(rel='stylesheet', href='/stylesheets/index.css')
  link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.min.css')

block content
  // Navbar (sit on top)
  .w3-top
    #myNavbar.w3-bar.w3-white.w3-card
      a.w3-bar-item.w3-button.w3-wide(href='#home') Motion Tracking
      // Right-sided navbar links
      .w3-right.w3-hide-small
        a.w3-bar-item.w3-button(href='#javasciprt:void(0)', onclick='create_new_workspace()')
          i.fa.fa-paper-plane
          |  New Workspace
        if !user
          a.w3-bar-item.w3-button(href='#javascript:void(0)', onclick='call_login_modal()')
            i.fa.fa-user-circle-o
            |  Login
        else
          a.w3-bar-item.w3-button(href='/auth/logout')
            i.fa.fa-sign-out
            |  Log out
      // Hide right-floated links on small screens and replace them with a menu icon
      a.w3-bar-item.w3-button.w3-right.w3-hide-large.w3-hide-medium(href='javascript:void(0)', onclick='w3_open()')
        i.fa.fa-bars
  // Sidebar on small screens when clicking the menu icon
  nav#mySidebar.w3-sidebar.w3-bar-block.w3-black.w3-card.w3-animate-left.w3-hide-medium.w3-hide-large(style='display:none')
    a.w3-bar-item.w3-button.w3-large.w3-padding-16(href='javascript:void(0)', onclick='w3_close()') Close ×
    a.w3-bar-item.w3-button(href='#home', onclick='w3_close()') Home
    a.w3-bar-item.w3-button(href='#javascript:void(0)', onclick='call_login_modal()') Login
